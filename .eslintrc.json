{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "extends": [
        "standard",
        "plugin:vue/vue3-essential",
        "plugin:tailwindcss/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "vue"
    ],
    "rules": {
        "vue/no-v-text-v-html-on-component": "off",
        "vue/multi-word-component-names": "off",
        "vue/no-v-html": "off",
        "tailwindcss/no-custom-classname": ["warn", {
            "cssFiles": [
              "resources/css/app.css"
            ]
        }]
    }
}
